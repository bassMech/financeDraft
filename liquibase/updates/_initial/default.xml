<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:pro="http://www.liquibase.org/xml/ns/pro"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

	<changeSet id="inital-pragma" author="bassmech" context="default">
		<sql>PRAGMA foreign_keys = ON;</sql>
	</changeSet>
	<changeSet id="inital-configuration" author="bassmech" context="default">
		<createTable tableName="configuration">
			<column name="id" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="code" type="TEXT">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="entry" type="TEXT">
				<constraints nullable="false" />
			</column>
			<column name="updated_at" type="INTEGER">
				<constraints nullable="false" />
			</column>
		</createTable>
		<insert tableName="configuration">
			<column name="code">project.revision</column>
			<column name="entry">@findra-version@</column>
			<column name="updated_at" valueComputed="unixepoch()"></column>
		</insert>
		<insert tableName="configuration">
			<column name="code">year.range.min</column>
			<column name="entry">2000</column>
			<column name="updated_at" valueComputed="unixepoch()"></column>
		</insert>
		<insert tableName="configuration">
			<column name="code">year.range.max</column>
			<column name="entry">2100</column>
			<column name="updated_at" valueComputed="unixepoch()"></column>
		</insert>
	</changeSet>

	<changeSet id="inital-setting" author="bassmech" context="default">
		<createTable tableName="setting">
			<column name="id" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="code" type="TEXT">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="entry" type="TEXT">
				<constraints nullable="false" />
			</column>
			<column name="updated_at" type="INTEGER">
				<constraints nullable="false" />
			</column>
		</createTable>
		<insert tableName="setting">
			<column name="code">locale</column>
			<column name="entry">en</column>
			<column name="updated_at" valueComputed="unixepoch()"></column>
		</insert>
		<insert tableName="setting">
			<column name="code">currency</column>
			<column name="entry">EUR</column>
			<column name="updated_at" valueComputed="unixepoch()"></column>
		</insert>
	</changeSet>

	<changeSet id="inital-account" author="bassmech" context="default">
		<createTable tableName="account">
			<column name="id" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="starting_year" type="INTEGER">
				<constraints nullable="false" />
			</column>
			<column name="title" type="TEXT">
				<constraints nullable="false" unique="true" />
			</column>
			<column name="description" type="TEXT">
				<constraints nullable="true" />
			</column>
			<column name="deleted_at" type="INTEGER">
				<constraints nullable="true" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="inital-accounting_year" author="bassmech" context="default">
		<createTable tableName="accounting_year">
			<column name="id" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="account_id" type="INTEGER">
				<constraints nullable="false" foreignKeyName="fk_accounting_year_account_id" references="account(id)" />
			</column>
			<column name="year" type="INTEGER">
				<constraints nullable="false" />
			</column>
			<column name="start_value" type="FLOAT">
				<constraints nullable="false" />
			</column>
			<column name="transaction_sum" type="FLOAT">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="inital-accounting_month" author="bassmech" context="default">
		<createTable tableName="accounting_month">
			<column name="id" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="accounting_year_id" type="INTEGER">
				<constraints nullable="false" foreignKeyName="fk_accounting_month_accounting_year_id" references="accounting_year(id)" />
			</column>
			<column name="month" type="INTEGER">
				<constraints nullable="false" />
			</column>
			<column name="start_value" type="FLOAT">
				<constraints nullable="false" />
			</column>
			<column name="transaction_sum" type="FLOAT">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="inital-transaction" author="bassmech" context="default">
		<createTable tableName="account_transaction">
			<column name="id" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="accounting_month_id" type="INTEGER">
				<constraints nullable="false" foreignKeyName="fk_account_transaction_accounting_month_id" references="accounting_month(id)" />
			</column>
			<column name="title" type="TEXT">
				<constraints nullable="false" />
			</column>
			<column name="description" type="TEXT">
				<constraints nullable="true" />
			</column>
			<column name="value" type="REAL">
				<constraints nullable="false" />
			</column>
			<column name="expected_day" type="INTEGER">
				<constraints nullable="false" />
			</column>
			<column name="executed_at" type="INTEGER">
				<constraints nullable="true" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="inital-clearing_accounts" author="bassmech" context="default">
		<createTable tableName="clearing_account">
			<column name="id" type="INTEGER" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="title" type="TEXT">
				<constraints nullable="false" />
			</column>
			<column name="description" type="TEXT">
				<constraints nullable="true" />
			</column>
			<column name="account_id" type="INTEGER">
				<constraints nullable="false" foreignKeyName="fk_clearing_account_account_id" references="account(id)" />
			</column>
			<column name="clearingAccountId" type="TEXT">
				<constraints nullable="false" foreignKeyName="fk_clearing_account_clearing_id" references="account(id)" />
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog>
